{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "prisma/*": ["src/prisma/*"]
    }
  },
  "include": ["src"]
}
